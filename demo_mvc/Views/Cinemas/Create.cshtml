@model demo_mvc.Models.Cinema

@{
    ViewData["Title"] = "Add a new Cinema";
}

<h1 class="text-center">Add a New Cinema</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Profile Picture Preview -->
            <div class="form-group text-center">
                <img id="LogoPreview" class="border-info rounded-circle" style="max-width:150px" />
            </div>

            <!-- Profile Picture URL -->
            <div class="form-group">
                <label asp-for="Logo" class="control-label"></label>
                <input asp-for="Logo" class="form-control" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>

            <!-- Full Name -->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Bio -->
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group text-right">
                <input type="submit" value="Create" class="btn btn-outline-success" />
                <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Lấy phần tử hình ảnh và khởi tạo với giá trị Logo hiện tại (nếu có)
            var output = document.getElementById('LogoPreview');
            output.src = $("#Logo").val();  // Đặt giá trị hình ảnh từ URL hiện tại của input (nếu có)

            // Khi thay đổi URL trong input, cập nhật hình ảnh
            $("#Logo").on("change", function() {
                var output = document.getElementById('LogoPreview');
                output.src = $(this).val();  // Cập nhật hình ảnh với URL mới
            });
        });
    </script>
}
